<div class="table-container">
  <table id="tbl_esign" class="display" cellspacing="0" width="100%">
    <!-- Table content goes here -->
  </table>
</div>


<style>
  .table-container {
    max-height: 400px; /* Adjust this to the desired height to enable vertical scrolling */
    overflow-y: auto;
    position: relative; /* Required for the fixed header positioning */
  }

  .table-container thead th {
    position: sticky;
    top: 0;
    background-color: #f5f5f5; /* Adjust this to match your table header background color */
    z-index: 1;
  }
</style>


<script>
  $(document).ready(function() {
    const table = $('#tbl_esign').DataTable({
      // Your DataTable options go here
    });

    // Add the fixed-header class to the table header
    $('#tbl_esign thead').addClass('fixed-header');

    // Update the fixed header position on scroll
    $('.table-container').on('scroll', function() {
      const scrollLeft = $(this).scrollLeft();
      $('.fixed-header').css('left', -scrollLeft);
    });
  });
</script>
